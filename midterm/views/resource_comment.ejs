    <div class="resource_id container">
        <div class="row">
            <span>
                <div class="container-fluid">
                    <h2 class="col"><%= resource.title %> </h2>
                    <div class="star s-0.5 col-sm-2" data-default="0.5">Rating : <%= resource.avg_rating%>  *</div>
                </div>
                <iframe class="col-sm-12"  width="420" height="345" src="<%= resource.resource_url  %>"></iframe>
                <div>
                    <h6 class="col-sm-11" style="text-align: center; font-size: 20px;"> <%= resource.description %></h6>
                </div>

            </span>
        </div>
    </div>
  <form action="/comment/addcomment" method="POST">
    <div class="user-field container text-center">
        <div class="form-group">
            <label class="label-edit form-control-label" for="comment" style="font-size: 20px;">Comment</label>
            <input class="edit" form-control" type="text"  name="comment" placeholder="Add a Comment">
            <button class="edit-button" type="submit">Submit</button>
        </div>
    </div>
  </form>

  <% for(var i=0; i<comments.length; i++) {%>

    <div id="comment" class="container">
      <div class="form-group">
        <label class="form-control-label" for="commentuser"><%= comments[i].commenter %></label>
          <h6 class="text-muted time"><%= comments[i].created_at %></h6>
          <p class="comment"><%= comments[i].text %></p>
        </div>
    </div>

 <% } %>
